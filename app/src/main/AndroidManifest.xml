<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.abdul.spirit">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".LoginAndRegistration.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Modules.MainActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".LoginAndRegistration.LoginActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".LoginAndRegistration.RegisterActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".CreateTeam.MyTeam"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".CreateTeam.CreateTeam"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".CreateTeam.AddPlayerActivity"
            android:windowSoftInputMode="adjustPan"></activity>
    </application>

</manifest>